<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <title>ED3 Beat Timeline Generator</title>
  <style>
    body { font-family: sans-serif; max-width: 700px; margin: 2em auto; }
    textarea { width: 100%; height: 300px; }
    #ed3Btn, #copyBtn { margin-top: 8px; }
  </style>
</head>
<body>
  <h1>ED3 Beat Timeline Generator</h1>
  <input type="file" id="audioFile" accept="audio/mp3,audio/mpeg"/><br><br>
  <textarea id="output" readonly></textarea><br>
  <button id="copyBtn">Copy JSON</button>
  <button id="ed3Btn">Create & Download .ed3</button>
  <script>
    const MARKER = "\n--ED3-JSON-START--\n";
    let lastMp3File = null;
    let lastJson = "";

    document.getElementById('audioFile').addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (!file) return;
      lastMp3File = file;
      const audioContext = new (window.AudioContext || window.webkitAudioContext)();
      const reader = new FileReader();
      reader.onload = function(ev) {
        audioContext.decodeAudioData(ev.target.result).then(buffer => {
          const raw = buffer.getChannelData(0);
          const sampleRate = buffer.sampleRate;
          const fftSize = 2048, hopSize = 512;
          let times = [], lastBeat = 0, minGap = 0.18;
          let threshold = 0, count = 0;
          for(let i=0;i<raw.length-fftSize;i+=hopSize){
            let max = 0;
            for(let j=0;j<fftSize;j++){
              let w = 0.5*(1-Math.cos(2*Math.PI*j/(fftSize-1)));
              max += Math.abs(raw[i+j])*w;
            }
            threshold += max/fftSize;
            count++;
          }
          threshold = (threshold/count)*3;
          for(let i=0;i<raw.length-fftSize;i+=hopSize){
            let bassSum = 0;
            for(let j=0;j<200;j++){
              if(i+j>=raw.length) break;
              bassSum += Math.abs(raw[i+j]);
            }
            let time = i/sampleRate;
            if(bassSum>threshold && (time-lastBeat)>minGap){
              times.push({time:Math.round(time*1000000)/1000000});
              lastBeat=time;
            }
          }
          if (times.length == 0 || times[times.length-1].time < buffer.duration)
            times.push({ time: Math.round(buffer.duration*1000000)/1000000 });
          lastJson = JSON.stringify({timeline:times},null,2);
          document.getElementById('output').value = lastJson;
        });
      };
      reader.readAsArrayBuffer(file);
    });

    document.getElementById('copyBtn').onclick = function() {
      const ta = document.getElementById('output');
      if(ta.value.trim() === "") return;
      ta.select();
      ta.setSelectionRange(0, ta.value.length);
      try {
        if (navigator.clipboard) {
          navigator.clipboard.writeText(ta.value);
        } else {
          document.execCommand('copy');
        }
        alert('JSON kopiert!');
      } catch (err) {
        alert('Kopieren fehlgeschlagen.');
      }
      ta.selectionEnd = 0;
    };

    document.getElementById('ed3Btn').onclick = function() {
      if (!lastMp3File) {
        alert('Bitte zuerst eine MP3 hochladen!');
        return;
      }
      if (!lastJson || lastJson.trim() === "") {
        alert('Noch kein JSON generiert!');
        return;
      }
      const reader = new FileReader();
      reader.onload = function(e) {
        const mp3Array = new Uint8Array(e.target.result);
        const markerArray = new TextEncoder().encode(MARKER);
        const jsonArray = new TextEncoder().encode(lastJson);
        const outArray = new Uint8Array(mp3Array.length + markerArray.length + jsonArray.length);
        outArray.set(mp3Array, 0);
        outArray.set(markerArray, mp3Array.length);
        outArray.set(jsonArray, mp3Array.length + markerArray.length);
        const blob = new Blob([outArray], {type: "application/octet-stream"});
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = lastMp3File.name + ".ed3";
        a.click();
        URL.revokeObjectURL(url);
      };
      reader.readAsArrayBuffer(lastMp3File);
    };
  </script>
</body>
</html>